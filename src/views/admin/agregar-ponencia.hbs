{{> header}}

<main class="w-full bg-white flex items-center justify-center py-24">
    <div class="w-full">
        <form class="bg-white py-4 shadow-2xl flex flex-col items-center w-96 mx-auto" action="/admin/agregar-ponencia" method="POST">
            <h1 class="text-3xl mb-8">Registrar ponencia</h1>
            <input class="block border border-black w-72 mb-2 p-2 rounded-md" type="text" name="nombre" placeholder="Nombre" required>
            <input class="block border border-black w-72 mb-2 p-2 rounded-md" type="text" name="descripcion" placeholder="Descripcion" required>
            <select name="idPonente" class="bg-gray-200 border border-gray-200 text-black text-xs py-3 px-4 pr-8 mb-3 rounded" required>
                <option value="">Seleccione un ponente</option>
                {{#each ponentes}}
                    <option value="{{this.dataValues.id}}">{{this.dataValues.nombres}}. {{this.dataValues.apellidos}}</option>
                {{/each}}
            </select>
            <button class="p-2 bg-blue-500 text-white">Registrar</button>
        </form>
    </div>
</main>

{{> footer}}