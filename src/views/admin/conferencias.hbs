{{> header}}

<main class="w-full bg-white flex items-center justify-center py-24">
    <section class="w-4/5 mx-auto">
        <div class="flex w-full justify-between">
            <h1 class="text-3xl mb-4">Lista de conferencias</h1>
            <a class="duration-300 hover:bg-black outline-none text-sm my-2 text-white justify-center items-center flex bg-red-500 py-0.5 w-32 rounded-md" href="/admin/agregar-ponencia">Agregar ponencia</a>
            <a class="duration-300 hover:bg-black outline-none text-sm my-2 text-white justify-center items-center flex bg-red-500 py-0.5 w-32 rounded-md" href="/admin/agregar-conferencia">Agregar conferencia</a>
        </div>
        <table class="rounded-md bg-white w-full shadow-md">
            <thead>
                <tr class="border-b-2 border-gray-400 bg-blue-100">
                    <th class="py-2 text-gray-700">Nombre</th>
                    <th class="py-2 text-gray-700">Fecha inicio</th>
                    <th class="py-2 text-gray-700">Fecha fin</th>
                    <th class="py-2 text-gray-700">Enlace conferencia</th>
                    <th class="py-2 text-gray-700"></th>
                </tr>
            </thead>
            <tbody>
                {{#each listaConferencias}}
                    <tr class="border-b-2 border-gray-400">
                        <td class="py-2 text-center">{{this.dataValues.nombre}}</td>
                        <td class="py-2 text-center">{{this.dataValues.fechaInicio}}</td>
                        <td class="py-2 text-center">{{this.dataValues.fechaFin}}</td>
                        <td class="py-2 text-center">{{this.dataValues.enlace}}</td>
                        <td class="py-2 text-center flex justify-center">
                            <a class="duration-300 hover:bg-black outline-none text-sm my-2 text-white justify-center flex bg-blue-500 py-0.5 w-14 rounded-md mr-2" href="/admin/ver-conferencia/{{this.dataValues.id}}">Ver</a>
                            <a class="duration-300 hover:bg-black outline-none text-sm my-2 text-white justify-center flex bg-red-500 py-0.5 w-14 rounded-md" href="/admin/eliminar-conferencia/{{this.dataValues.id}}">Eliminar</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        
    </section>
</main>

{{> footer}}