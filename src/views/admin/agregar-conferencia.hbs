{{> header}}

<main class="w-full bg-white flex items-center justify-center py-24">
    <div class="w-full">
        <form id="regConf" class="bg-white py-4 shadow-2xl flex flex-col items-center w-96 mx-auto" action="/admin/agregar-conferencia" method="POST">
            <h1 class="text-3xl mb-8">Registrar conferencia</h1>
            <input class="block border border-black w-72 mb-2 p-2 rounded-md" type="text" name="nombre" placeholder="Nombre" required>
            <input class="block border border-black w-72 mb-2 p-2 rounded-md" type="text" name="descripcion" placeholder="Descripcion" required>
            <input class="block border border-black w-72 mb-2 p-2 rounded-md" type="text" name="enlace" placeholder="Enlace" required>
            <input class="block border border-black w-72 mb-2 p-2 rounded-md" type="date" name="fechaInicio" placeholder="" required>
            <input class="block border border-black w-72 mb-2 p-2 rounded-md" type="date" name="fechaFin" placeholder="" required>
            <button class="p-2 bg-blue-500 text-white">Registrar</button>
        </form>
    </div>
</main>
<script>
    document.querySelector("#regConf").addEventListener("submit", agregarConf);
    function agregarConf(e) {
        e.preventDefault();
        const inicio = this.fechaInicio.value
        const fin = this.fechaFin.value
        if(Date.parse(fin) < Date.parse(inicio)){
            alert("La fecha de fin de la conferencia, debe ser posterior a la fecha de inicio")
        } else {
            this.submit()
        }
    }
</script>

{{> footer}}